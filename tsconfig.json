{
  "compilerOptions": {
    "target": "es2016",
    "types": [
      "styled-jsx"
    ],
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "@/lib/*": [
        "lib/*"
      ],
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "app/api/auth/page.js",
    "app/layout.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}